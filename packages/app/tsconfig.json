{
  "extends": "@monorepo/common/tsconfig.base.json",
  "include": ["src/**/*", "tests/**/*", "../common/src/domain/types/file.ts"],
  "compilerOptions": {
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@/tests/*": ["../tests/*"]
    },
    "types": ["vitest/globals"],
    "esModuleInterop": true,
  }
}
